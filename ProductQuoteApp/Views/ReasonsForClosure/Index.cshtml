@model IEnumerable<ProductQuoteApp.Persistence.ReasonsForClosure>

@{
    ViewBag.Title = @ProductQuoteApp.Resources.Resources.EtyReasonsForClosure;
}

<div class="row" style="margin-bottom:25px;">
    <h3>@ProductQuoteApp.Resources.Resources.EtyReasonsForClosure</h3>
</div>

<p>
    @Html.ActionLink(@ProductQuoteApp.Resources.Resources.ActCreate, "Create")
</p>
<table class="table">
    <tr>
        <th width="100%">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td nowrap>
            <a title="@ProductQuoteApp.Resources.Resources.ActEdit" href="@Url.Action("Edit", "ReasonsForClosure", new { id = item.ReasonsForClosureID })"><div style="font-size:1.2em; display: inline-block;"><i class='fa fa-edit'></i></div></a>
            <a title="@ProductQuoteApp.Resources.Resources.ActDetails" href="@Url.Action("Details", "ReasonsForClosure", new { id = item.ReasonsForClosureID })"><div style="font-size:1.2em; display: inline-block;"><i class='fa fa-book-open'></i></div></a>
            <a title="@ProductQuoteApp.Resources.Resources.ActDelete" href="@Url.Action("Delete", "ReasonsForClosure", new { id = item.ReasonsForClosureID })"><div style="font-size:1.2em; display: inline-block;"><i class='fa fa-trash-alt'></i></div></a>
        </td>
    </tr>
}

</table>
