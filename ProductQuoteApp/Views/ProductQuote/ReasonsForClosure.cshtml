@model ProductQuoteApp.Models.ProductQuoteReasonsForClosureViewModel

@{
    ViewBag.Title = "ReasonsForClosure";
}

<!--<h2>View</h2>-->


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Cotizacion</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductQuoteID)

        <div class="form-group">
            @*@Html.LabelFor(model => model.ProductQuoteCode, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label("Cotización", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ProductQuoteCode, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.DueDateReasonID, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label("Razón Cierre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ReasonsForClosureID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ReasonsForClosureID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClosureDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ClosureDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ClosureDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClosureObservations, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ClosureObservations, new { @class = "form-control  col-md-10", @rows = "4" })
                @Html.ValidationMessageFor(model => model.ClosureObservations, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@ProductQuoteApp.Resources.Resources.ActSave class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@ProductQuoteApp.Resources.Resources.ActBackToList, "Index", new { pq = ViewBag.Pq, customerID = ViewBag.CustomerID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
